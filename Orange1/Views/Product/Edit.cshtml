@using Orange1.Models
@model Product

@{
    ViewData["Title"] = "Create Product";
    Layout = "";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Mo7Wz3Ov0tfT4x1vO53WKnNQpJ/5qEfgjdV1CCYoc9Ufe8EGw3KOGXK5yV0p1ndE" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            background-color: brown;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                padding: 10px;
                text-decoration: none;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 220px; /* Shift content to the right to make space for sidebar */
        }
    </style>
</head>

<body>
    <div class="sidebar bg-dark p-3">
        <h4 class="text-white text-center mb-4">Menu</h4>

        <!-- Dashboard (Category Creation) -->
        <a asp-action="CreateCategory" asp-controller="Dashboard" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-folder-plus mr-2"></i> Create Category
        </a>

        <!-- Product Creation -->
        <a asp-action="Create" asp-controller="Product" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-plus-circle mr-2"></i> Create Product
        </a>

        <!-- Order (Shopping Cart) -->
        <a asp-action="ShopCart" asp-controller="Order" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-shopping-cart mr-2"></i> Shopping Cart
        </a>

        <!-- Home -->
        <a asp-action="Index" asp-controller="Home" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-home mr-2"></i> Home
        </a>

        <!-- Shop -->
        <a asp-action="Shop" asp-controller="Home" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-store mr-2"></i> Shop
        </a>


        <!-- Product Table -->
        <a href="#product-table" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-table mr-2"></i> Meal Order
        </a>

        <!-- Logout -->
        <a asp-action="Logout" asp-controller="Account" class="d-flex align-items-center text-white mb-2">
            <i class="fas fa-sign-out-alt mr-2"></i> Logout
        </a>
    </div>


    <!-- Checkout Start -->
    div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="row px-xl-5 justify-content-center">

        <!-- Centering the heading -->
        <h2 class="text-center">Edit Meal</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

            <div class="col-lg-10 ml-auto">
        <h5 class="section-title position-relative text-uppercase mb-3">
            <span class="bg-secondary pr-3">Product Details</span>
        </h5>
        <div class="bg-light p-30 mb-5">
            <div class="row">
                <!-- Display Existing Product Image -->
                <div class="col-md-12 form-group text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" alt="Product Image" style="max-width: 100%; height: auto;" />
                    }
                </div>

                <!-- Product Name -->
                <div class="col-md-6 form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                           
                           

                          

                <!-- Condition -->
                <div class="col-md-6 form-group">
                    <label asp-for="Condition" class="control-label"></label>
                    <input asp-for="Condition" class="form-control" placeholder="Enter condition" />
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="col-md-6 form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="col-md-6 form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter description" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Product Image -->
                <div class="col-md-6 form-group">
                    <label for="ImageFile" class="control-label">Product Image</label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>
                           
            </div>
                        <input type="submit" value="Edit Meal" style="font-size:20px;height: 60px; width: px; background-color: #A2453D; color: #FFFFFF;" />
        </div>

        <!-- Submit Button -->
       
    </div>
</form>

           
    <!-- Checkout End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>