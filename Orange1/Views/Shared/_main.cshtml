<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nav-footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha384-oSdgWHSzpOqFmvqbrPvOJKIYxApsE0P6fvvIv3FsI0U6OpE/BmoTHS1yaORtjEnQ" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar">
        <!-- Logo Section -->
        <div class="nav-left">
            <div class="logo">
                <i class="fa-solid fa-utensils" style="color: #FFD43B;"></i> <!-- Added food icon here -->
                <h1>HOME SHEF</h1>
            </div>
        </div>

        <!-- Navigation Links Section -->
        <div class="nav-middle">
            <ul class="nav-links" id="navLinks">
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Menu" asp-controller="Product">Menu</a></li>
                <li><a asp-action="AboutUs" asp-controller="Home">About Us</a></li>

            </ul>
        </div>


        <div class="nav-right">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="ShopCart" asp-controller="Order">
                    <i class="fa-solid fa-cart-shopping cart-icon"></i>
                </a>
            }
        </div>

        <!-- Person Icon with Dropdown Menu -->
        <div class="user-menu">
            <i class="fas fa-user"  onclick="toggleDropdown()"></i>
            <div class="dropdown-menu" id="dropdownMenu">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Logout" asp-controller="Account" >
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </a>
                    <a asp-action="" asp-controller="" >
                        <i class="fas fa-user-plus mr-2"></i> Profile
                    </a>

                }
                else
                {
                    <a asp-action="Login" asp-controller="Account" >
                        <i class="fas fa-sign-in-alt mr-2"></i> Login
                    </a>
                }
            </div>
        </div>




        <!-- Menu Icon for Mobile -->
        <div class="menu-icon" onclick="toggleMenu() ">
            <i class="fa fa-bars"></i>
        </div>
        </div>
    </nav>

    @RenderBody()
    @await RenderSectionAsync("Scripts", required: false)

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h3>About Us</h3>
                <p>Savor our handcrafted meals, made with love and passion for every palate</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href=""></a>Menu</li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p>Email: info@example.com</p>
                <p>Phone: (123) 456-7890</p>
            </div>
            <div class="footer-section social-media">
                <h3>Follow Us</h3>
                <div class="social-icons">
                    <a href="#"><i class="fa-brands fa-facebook" style="color: white;"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter" style="color: white;"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram" style="color: white;"></i></a>
                </div>
            </div>

    </footer>
    <script src="~/js/nav-footer.js"> </script>
</body>
</html>

