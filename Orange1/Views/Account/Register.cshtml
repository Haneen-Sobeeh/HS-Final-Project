@model Orange1.Models.RegisterViewModel
@{
    Layout = "_Non";
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Signup | CodingLab</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <div class="cover">
            <p class="text-danger text-center">@ViewBag.Message</p>
            <div class="back">
                <img class="backImg" src="~/images/reh.png" alt="">
                <div class="text">
                    <span class="text-1">Discover the joy of homemade meals <br> crafted just for you</span>
                    <span class="text-2">Let's get started</span>
                </div>
            </div>
        </div>
        <div class="forms">
            <div class="form-content">
                <div class="signup-form">
                    <div class="title">Signup</div>
                    <form asp-action="Register">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-user"></i>
                                <input type="text" placeholder="Your name" required asp-for="FullName">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input type="text" placeholder="Your email" required asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-phone"></i>
                                <input type="tel" placeholder="Your phone number" required asp-for="PhoneNumber">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input type="password" placeholder="Your password" required asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="Confirm Password" required asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                            <div class="button input-box">
                                <input type="submit" value="Submit">
                            </div>
                        <div class="text sign-up-text">Already have an account?  <a asp-action="Login" asp-controller="Account">Login now</a></div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
